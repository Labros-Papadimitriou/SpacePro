    <!-- PAGE -->
    <div class="page" @*style="background-color: #011220 "*@>
        <div class="page-main">
            <!-- app-Header -->
            <div class="app-header header sticky" style="background-color: black;">
                <div class="container main-container">
                    <div class="myNav">
                        <a aria-label="Hide Sidebar" class="app-sidebar__toggle" data-bs-toggle="sidebar" href="#"></a>
                        <!-- sidebar-toggle-->
                        <a class="logo-horizontal " href="/Home/Index">
                            <img src="~/Template/sash/assets/images/brand/logo.png" class="header-brand-img desktop-logo" alt="logo">
                        </a>

                        <!--HOME-->
                        <div>
                            <a class="side-menu__item" data-bs-toggle="slide" href="/Home/Index"><span class="side-menu__label">Home</span></a>
                        </div>
                        <!--BODIES-->
                        <div class="slide">
                            <a class="side-menu__item" data-bs-toggle="slide" href="/Bodies/BodiesTable"><span class="side-menu__label">Celestial Bodies</span></a>
                        </div>
                        <!--ARTICLES-->
                        <div class="slide">
                            <a class="side-menu__item" data-bs-toggle="slide" href="/Article/ShowArticles"><span class="side-menu__label">Articles</span></a>
                        </div>
                        <!--GALLERY-->
                        <div class="slide">
                            <a class="side-menu__item" data-bs-toggle="slide" href="/Gallery/ShowGallery"><span class="side-menu__label">Gallery</span></a>
                        </div>
                        <!--PAYMENT-->
                        <div>
                            <a class="side-menu__item" data-bs-toggle="slide" href="/Payment/ShowPaymentMethods"><span class="side-menu__label">Payment</span></a>
                        </div>
                        <!--SOCIAL-->
                        <div>
                            <a class="side-menu__item" data-bs-toggle="slide" href="/Social/ShowSocial"><span class="side-menu__label">Social</span></a>
                        </div>
                        <!--ADMIN ACTIONS-->
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="d-flex justify-content-center">
                                <div class="dropdown">
                                    <div class="side-menu__item">
                                        <button class="dropdown-toggle side-menu__item adminBtn" type="button" data-toggle="dropdown">
                                            Admin Actions
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="ddi side-menu__item" data-bs-toggle="slide" href="/Calendar/ShowCalendar"><span class="side-menu__label">Events</span></a></li>
                                            <li><a class="ddi side-menu__item" data-bs-toggle="slide" href="/News/AddNewsletter"><span class="side-menu__label">Newsletter</span></a></li>
                                            <li><a class="ddi side-menu__item" data-bs-toggle="slide" href="/Dashboard/UserRoles"><span class="side-menu__label">Dashboard</span></a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                        <div style="margin-top:20px;">
                            @Html.Partial("_ProfilPartial")
                        </div>
                        <div>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>
            </div>
            <!-- /app-Header
            <!--APP-SIDEBAR-->
