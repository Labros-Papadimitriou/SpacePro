@section social{
    <script type="text/javascript">
        $(document).ready(function () {
            FillUsersTable();
        });
    </script>

    <script type="text/javascript">
        function FillUsersTable() {
            $.ajax({
                url: "/Social/GetUsersTable",
                type: "get",
                dataType: "json",
                success: function (users) {

                    for (let user of users) {

                        let date = user.DateOfBirth;
                        let postdate = moment.utc(date).format('DD-MM-YYYY');

                        let template = `
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center"><img class="rounded-circle" src="" alt="NotReady" width="30"></div>
                                            </td>
                                            <td> <span class="ml-2">${user.UserName}</span></td>
                                            <td class="font-weight-bold">${postdate}</td>
                                            <td class="font-weight-bold">Not Set Yet</td>
                                            <td><a class="btn btn-outline-success" >Set Role</a>&emsp;<a onclick="DeleteUser('${user.Id}')" class="btn btn-danger">Delete User</a></td>
                                        </tr>
                                        `;
                        let row = $(template);

                        $("#social-table tbody").append(row);
                    }
                }
            })
        }
    </script>

    <script type="text/javascript">

        function DeleteUser(id) {

            $.ajax({
                url: "/Social/DeleteUser?id="+id,
                type: "delete",
                dataType: "json",
                success: function (user) {
                    $("#social-table tbody").empty();
                    FillUsersTable();
                }
            })
        }

    </script>
}
