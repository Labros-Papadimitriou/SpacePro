@model Entities.BroadClasses.Article

@{
    Layout = "~/Views/Shared/_LayoutSpace.cshtml";
}

<!--Modal Delete-->
<div class="modal fade" id="delete" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog alert-danger bg-danger">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">X</button>
            </div>
            <div class="modal-body">
                <h6>Are you sure you want to delete this Article?</h6><br />
            </div>
            <div class="modal-footer">
                <button id="delete-btn" type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!--app-content open-->
<div class="main-content app-content mt-0">
    <div class="side-app">

        <!-- CONTAINER -->
        <div class="main-container container-fluid">

            <!-- PAGE-HEADER -->
            <div class="page-header">
                <h1 class="page-title">Article Details</h1>
                <div style="margin-left:350px">
                    <button id="edit-btn" class="btn btn-warning">Edit</button>
                    <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete">Delete</button>
                </div>
                <div>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Article/ShowArticles">All Articles</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Article Details</li>
                    </ol>
                </div>
            </div>
            <!-- PAGE-HEADER END -->

            <div class="row">
                <div class="col-xl-8">
                    <div class="card">
                        <img id="article-image" class="card-img-top br-tr-7 br-tl-7 " src="@Model.ArticleImage.Url" alt="@Model.ArticleImage.AlternativeText">
                        <div class="card-body">
                            <div class="d-md-flex">
                                <a href="javascript:void(0);" class="d-flex me-4 mb-2">
                                    <i class="fe fe-calendar fs-16 me-1 p-3 bg-secondary-transparent text-secondary bradius"></i>
                                    <div id="article-postdate" class="mt-0 mt-3 ms-1 text-muted font-weight-semibold">@Model.PostDate</div>
                                </a>
                                <a style="margin-left:50px" href="javascript:void(0)" class="d-flex mb-2">
                                    <i class="fe fe-user fs-16 me-1 p-3 bg-primary-transparent text-primary bradius"></i>
                                    <div class="mt-0 mt-3 ms-1 text-muted font-weight-semibold">@Model.AuthorName</div>
                                </a>
                                <div style="margin-left:60px" href="javascript:void(0)" class="d-flex mb-2">
                                    <i class="fe fe-book fs-16 me-1 p-3 bg-primary-transparent text-primary bradius"></i>
                                    <div id="article-category" class="mt-0 mt-3 ms-1 text-muted font-weight-semibold">@Model.ArticleCategory.Title</div>
                                </div>
                                <div class="media-body" style="margin-left:75px; margin-top:5px">
                                    <div id="article-likes" class="mb-0 mt-2 ms-2" style="color:grey;">@Model.PostLikes people like this article</div>
                                </div>
                                <div class="ms-auto mt-3">
                                    <button id="like-btn" class="btn btn-success">Like</button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h3><a id="article-title" href="#">@Model.Title</a></h3>
                            <p id="article-description" class="card-text"></p>
                        </div>
                        <div id="article-description" class="text-muted">@Model.FullDescription</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- CONTAINER CLOSED -->
    </div>
</div>
<!--app-content closed-->

@section article{
    <script>

        $(document).ready(function () {
            $("#like-btn").click(function () {

                if ($("#like-btn").html() == "Like") {
                    $("#like-btn").html('Unlike');
                    $("#like-btn").attr('class', "btn btn-danger");

                    $.ajax({
                    url: `/Article/GiveLike?id=@Model.ArticleId`,
                    dataType: 'json',
                    type: 'get',
                    success: function (articleLikes) {
                        $("#article-likes").html(articleLikes + " people like this article");
                    }
                });
                }
                else {
                    $("#like-btn").html('Like');
                    $("#like-btn").attr('class', "btn btn-success");


                    $.ajax({
                    url: `/Article/RemoveLike?id=@Model.ArticleId`,
                    dataType: 'json',
                    type: 'get',
                    success: function (articleLikes) {
                        $("#article-likes").html(articleLikes + " people like this article");
                    }
                });
                }

            });
        });
    </script>

    <script type="text/javascript">

        $("#delete-btn").click(function () {
            $.ajax({
                url: "/Article/DeleteArticle?articleId=@Model.ArticleId&imageId=@Model.ArticleImage.ArticleImageId",
                type: "delete",
                dataType: "json",
                success: function (path) {
                    window.location.href = path;
                }
            })
        })

    </script>
}