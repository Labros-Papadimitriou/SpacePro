@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            HideNewPost();

            AllPosts();
            $("#delPost").click(function () {
                console.log("geua");
            });
            $(".fe-edit").click(ShowNewPost)

            $("#btnCreatePost").click(CreateNewPost);

        })
    </script>

    @* Create Post Func *@
    <script type="text/javascript">

        function CreateNewPost() {

            let postDetails = $("#txtArea").val();

            var settings = {
                "url": "/UserPost/CreatePost",
                "method": "POST",
                "timeout": 0,
                "headers": {
                    "Content-Type": "application/json"
                },
                "data": JSON.stringify({
                    "postDetails": postDetails
                }),
            };

            $.ajax(settings).done(function (response) {

                HideNewPost();

                let template = `<div class="alert alert-success alert-dismissible fade show" role="alert">
                                              <strong>Created!</strong>
                                              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">x</button>
                                            </div>`;


                $("#success").prepend(template);

                $("#txtArea").val("");

                AllPosts();
            }).error(function () {
                console.log("error");
            });


        }

    </script>

    @* HIDE AND SHOW FUCNTIONS *@
    <script type="text/javascript">

        function ShowNewPost() {
            $("#newPost").show(500);
            $("#DismissPost").click(function () {
                $("#txtArea").val("");
                HideNewPost();
            })
        }

        function HideNewPost() {
            $("#newPost").hide(200);
        }

    </script>

    @* ALL POSTS FUNCTION *@
    <script type="text/javascript">

        function AllPosts() {

            var settings = {
                "url": "/UserPost/GetPosts",
                "method": "GET",
                "timeout": 0,
            };

            $.ajax(settings).done(function (response) {


                $("#postsTable").children().remove();
                let postsCount = response.data.length;
                let posts = response.data;
                for (var post of posts) {

                    let template = `<div class="card border p-0 shadow-none">
                                                     <div class="card-body">
                                                        <div class="d-flex">
                                                            <div class="ms-auto">
                                                                <div class="dropdown show">
                                                                    <a class="new option-dots" href="JavaScript:void(0);" data-bs-toggle="dropdown">
                                                                        <span class=""><i class="fe fe-more-vertical"></i></span>
                                                                    </a>
                                                                    <div class="dropdown-menu dropdown-menu-end">
                                                                        <a onclick="EditPost(${post.UserPostId})" class="dropdown-item" href="#">Edit Post</a>
                                                                        <a onclick="DeletePost(${post.UserPostId})" class="dropdown-item" href="#"> Delete Post</a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="mt-4">
                                                            <p id="editDetailsPost${post.UserPostId}" class="mb-0 card-title fs-25">
                                                               ${post.PostDetails}
                                                            </p>
                                                        </div>
                                                    </div>
                                                    <div class="card-footer">
                                                        <div class="media mt-0">
                                                            <div class="media-body">
                                                                <h6 class="mb-0 mt-2 ms-2"> ${post.PostLikes} people like your post</h6>
                                                            </div>
                                                            <div class="ms-auto">
                                                                <div class="d-flex mt-1">
                                                                    <a class="new me-2 text-muted fs-16" href="JavaScript:void(0);"><span class=""><i class="fe fe-heart"></i></span></a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                            </div>`;



                    $("#postsTable").prepend(template);

                }
                $("#postsCount").html(postsCount);

            }).fail(function () {
                console.log("errrrrrrrrrrrrrror");
            });
        }

    </script>

    @* EDIT & DELETE FUNCS *@
    <script type="text/javascript">

        function EditPost(id) {
            $(`#editDetailsPost${id}`).attr('contenteditable', "true").css("background-color", "#3e3d3dcc");

            $(document).on('keypress', function (e) {
                if (e.which == 13) {
                    e.preventDefault();
                    let postDetails = $(`#editDetailsPost${id}`).html();
                    let RequestCls = {
                        id : id,
                        postDetails : postDetails
                    }


                    var settings = {
                        "url": "/UserPost/EditPost",
                        "method": "POST",
                        "timeout": 0,
                        "headers": {
                            "Content-Type": "application/json"
                        },
                        "data": JSON.stringify(RequestCls),
                    };

                    $.ajax(settings).done(function (response) {
                        AllPosts();
                    });



                }
            });

        }

        function DeletePost(id) {

            var settings = {
                "url": "/UserPost/DeletePost",
                "method": "POST",
                "timeout": 0,
                "headers": {
                    "Content-Type": "application/json"
                },
                "data": JSON.stringify({
                    "id": id
                }),
            };

            $.ajax(settings).done(function (response) {
                AllPosts();


            }).fail(function () {

                console.log("errrrrrrrrrrrrrror");
            });
        }

    </script>

